
public class P12CChaparro {

	public static void main(String[] args) {
//		Partiendo de tres variables tipo String s1, s2 y s3:
//			Realizar una expresión que de verdadero si:
//			el segundo carácter de s1 es el mismo que el segundo de s2
//			s1 es menor si ordenamos alfabéticamente hablando que s2

		String s1, s2, s3;
		char chars1, chars2;
		boolean pruebas;
		
		s1 = "Perro";
		s2 = "Vkndaval";
		s3 = "7398";
		
//		s1 y s2 son iguales
		pruebas = (s1 == s2);
		System.out.println(" - s1 y s2 son iguales? " + pruebas);
		
//		el segundo carácter de s1 es el mismo que el segundo de s2
		chars1 = s1.charAt(1);
		chars2 = s2.charAt(1);
		String mismoChar = (chars1 == chars2 ? " - El segundo caracter de s1 y s2 es igual? " + pruebas + ". La " + chars1 + " y la " + chars2 + " son iguales." :
			" - El segundo caracter de s1 y s2 es igual? " + pruebas + ". La " + chars1 + " y la " + chars2 + " no son iguales.");
		System.out.println(mismoChar);
		
		
				
	}

}
